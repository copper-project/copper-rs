(
    missions: [
        (id: "A"),
        (id: "B"),
    ],
    resources: [
        (
            id: "global",
            provider: "crate::resources::GlobalBundle",
        ),
        (
            id: "board_a",
            provider: "crate::resources::BoardBundle",
            config: { "label": "alpha-bus", "offset": 10 },
            missions: ["A"],
        ),
        (
            id: "board_b",
            provider: "crate::resources::BoardBundle",
            config: { "label": "beta-bus", "offset": -3 },
            missions: ["B"],
        ),
        (
            id: "extras_b",
            provider: "crate::resources::ExtraBundle",
            config: { "note": "mission-b-note" },
            missions: ["B"],
        ),
    ],
    logging: (
        // Disable task logging to keep the example lightweight.
        enable_task_logging: false,
    ),
    tasks: [
        (
            id: "sensor_a",
            type: "tasks::SensorTask",
            missions: ["A"],
            resources: {
                "counter": "board_a.counter",
                "bus": "board_a.bus",
                "tag": "board_a.tag",
                "global": "global.log",
            },
        ),
        (
            id: "trigger_a",
            type: "tasks::TriggerTask",
            missions: ["A"],
        ),
        (
            id: "inspector_a",
            type: "tasks::InspectorTask",
            missions: ["A"],
            resources: {
                "bus": "board_a.bus",
                "note": "board_a.tag",
                "global": "global.log",
            },
        ),
        (
            id: "trigger_b",
            type: "tasks::TriggerTask",
            missions: ["B"],
        ),
        (
            id: "sensor_b",
            type: "tasks::SensorTask",
            missions: ["B"],
            resources: {
                "counter": "board_b.counter",
                "bus": "board_b.bus",
                "tag": "board_b.tag",
                "global": "global.log",
            },
        ),
        (
            id: "inspector_b",
            type: "tasks::InspectorTask",
            missions: ["B"],
            resources: {
                "bus": "board_b.bus",
                "note": "extras_b.note",
                "global": "global.log",
            },
        ),
    ],
    bridges: [
        (
            id: "stats_a",
            type: "bridges::StatsBridge",
            missions: ["A"],
            resources: {
                "bus": "board_a.bus",
                "tag": "board_a.tag",
                "global": "global.log",
            },
            channels: [ Rx ( id: "stats_rx" ), Tx ( id: "stats_tx" ) ],
        ),
        (
            id: "stats_b",
            type: "bridges::StatsBridge",
            missions: ["B"],
            resources: {
                "bus": "board_b.bus",
                "tag": "board_b.tag",
                "global": "global.log",
            },
            channels: [ Rx ( id: "stats_rx" ), Tx ( id: "stats_tx" ) ],
        ),
    ],
    cnx: [
        (src: "trigger_a", dst: "sensor_a", msg: "tasks::Tick", missions: ["A"]),
        (src: "sensor_a", dst: "stats_a/stats_tx", msg: "bridges::BusReading", missions: ["A"]),
        (src: "stats_a/stats_rx", dst: "inspector_a", msg: "bridges::BusReading", missions: ["A"]),
        (src: "trigger_b", dst: "sensor_b", msg: "tasks::Tick", missions: ["B"]),
        (src: "sensor_b", dst: "stats_b/stats_tx", msg: "bridges::BusReading", missions: ["B"]),
        (src: "stats_b/stats_rx", dst: "inspector_b", msg: "bridges::BusReading", missions: ["B"]),
    ],
)

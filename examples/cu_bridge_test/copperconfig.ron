(
    missions: [
        (id: "BridgeOnlyAB"),
        (id: "BridgeLoopback"),
        (id: "SourceToBridge"),
        (id: "BridgeToSink"),
        (id: "BridgeTaskSame"),
        (id: "BridgeFanout"),
    ],
    tasks: [
        (
            id: "src_to_bridge",
            type: "tasks::SourceToBridge",
            missions: ["SourceToBridge"],
        ),
        (
            id: "passthrough",
            type: "tasks::PassthroughChain",
            missions: ["BridgeTaskSame"],
        ),
        (
            id: "sink_from_bridge",
            type: "tasks::SinkFromBridge",
            missions: ["BridgeToSink"],
        ),
    ],
    bridges: [
        (
            id: "alpha",
            type: "bridges::AlphaBridge",
            missions: ["BridgeOnlyAB", "BridgeLoopback", "BridgeToSink", "BridgeTaskSame", "BridgeFanout"],
            channels: [
                Rx ( id: "ingress", route: "alpha/ingress" ),
                Rx ( id: "loop_in", route: "alpha/loop_in" ),
                Rx ( id: "to_sink", route: "alpha/to_sink" ),
                Rx ( id: "chain_in", route: "alpha/chain_in" ),
                Tx ( id: "loop_out", route: "alpha/loop_out" ), // overrides macro default
                Tx ( id: "chain_out", route: "alpha/chain_out" ),
            ],
        ),
        (
            id: "beta",
            type: "bridges::BetaBridge",
            missions: ["BridgeOnlyAB", "SourceToBridge", "BridgeFanout"],
            channels: [
                Tx ( id: "egress", route: "beta/egress" ),
                Tx ( id: "from_src", route: "beta/from_src" ), // overrides macro default
                Tx ( id: "from_alpha_ingress", route: "beta/from_alpha_ingress" ),
                Tx ( id: "from_alpha_loop", route: "beta/from_alpha_loop" ),
                Tx ( id: "from_alpha_sink", route: "beta/from_alpha_sink" ),
                Tx ( id: "from_alpha_chain", route: "beta/from_alpha_chain" ),
            ],
        ),
    ],
    cnx: [
        (
            src: "alpha/ingress",
            dst: "beta/egress",
            msg: "messages::IngressMsg",
            missions: ["BridgeOnlyAB"],
        ),
        (
            src: "alpha/loop_in",
            dst: "alpha/loop_out",
            msg: "messages::LoopbackMsg",
            missions: ["BridgeLoopback"],
        ),
        (
            src: "src_to_bridge",
            dst: "beta/from_src",
            msg: "messages::FromSource",
            missions: ["SourceToBridge"],
        ),
        (
            src: "alpha/to_sink",
            dst: "sink_from_bridge",
            msg: "messages::SinkPayload",
            missions: ["BridgeToSink"],
        ),
        (
            src: "alpha/chain_in",
            dst: "passthrough",
            msg: "messages::ChainPayload",
            missions: ["BridgeTaskSame"],
        ),
        (
            src: "passthrough",
            dst: "alpha/chain_out",
            msg: "messages::ChainPayload",
            missions: ["BridgeTaskSame"],
        ),
        (
            src: "alpha/ingress",
            dst: "beta/from_alpha_ingress",
            msg: "messages::IngressMsg",
            missions: ["BridgeFanout"],
        ),
        (
            src: "alpha/loop_in",
            dst: "beta/from_alpha_loop",
            msg: "messages::LoopbackMsg",
            missions: ["BridgeFanout"],
        ),
        (
            src: "alpha/to_sink",
            dst: "beta/from_alpha_sink",
            msg: "messages::SinkPayload",
            missions: ["BridgeFanout"],
        ),
        (
            src: "alpha/chain_in",
            dst: "beta/from_alpha_chain",
            msg: "messages::ChainPayload",
            missions: ["BridgeFanout"],
        ),
    ],
    monitor: (
          type: "cu_consolemon::CuConsoleMon",
    ),
)
